<!-- form handling -->
<form action="/api/members" method="POST" id="add_user">
  <div class="new_user">
    <div class="form-group">
      <label for="name" class="text-light">Name</label>
      <input type="hidden" name="id" value="" />
      <input type="text" name="name" value="" placeholder="Mark Stoenis" />
    </div>
    <div class="form-group">
      <label for="Email" class="text-light">Email</label>
      <input
        type="text"
        name="email"
        value=""
        placeholder="example@gmail.com"
      />
    </div>
    <div class="form-group">
      <label for="gender" class="text-light">Gender</label>
      <div class="radio inline">
        <input type="radio" id="radio-2" name="gender" value="Male" />
        <label for="radio-2" class="radio-label">Male</label>
      </div>
      <div class="radio inline">
        <input type="radio" id="radio-3" name="gender" value="Female" />
        <label for="radio-3" class="radio-label">Female</label>
      </div>
    </div>

    <div class="form-group">
      <label for="gender" class="text-light">Status</label>
      <div class="radio inline">
        <input
          type="radio"
          id="radio-4"
          name="membershipStatus"
          value="Associate Member"
        />
        <label for="radio-4" class="radio-label">Associate Member</label>
      </div>
      <div class="radio inline">
        <input
          type="radio"
          id="radio-5"
          name="memberShipstatus"
          value="Core Member"
        />
        <label for="radio-5" class="radio-label">Core Member</label>
      </div>
      <div class="radio inline">
        <input type="radio" id="radio-6" name="currentStatus" value="Active" />
        <label for="radio-6" class="radio-label">Active</label>
      </div>
      <div class="radio inline">
        <input
          type="radio"
          id="radio-7"
          name="memberShipstatus"
          value="Inactive"
        />
        <label for="radio-7" class="radio-label">Inactive</label>
      </div>
      <div class="form-group">
        <label for="achievement" class="text-light">Achievement</label>
        <input type="hidden" name="id" value="" />
        <input
          type="text"
          name="name"
          value=""
          placeholder="Write member's achievement"
        />
      </div>
      <div class="form-group">
        <label for="comment" class="text-light">Comment</label>
        <input type="hidden" name="id" value="" />
        <input
          type="text"
          name="name"
          value=""
          placeholder="Write a comment about member"
        />
      </div>
    </div>

    <div class="form-group">
      <button type="submit" class="btn text-dark update">Save</button>
    </div>
  </div>
</form>
